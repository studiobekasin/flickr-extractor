{
  "manifest_version": 2,
  "name": "Flickr Album URL Extractor",
  "version": "1.0",
  "description": "Extract all image URLs from Flickr albums for use in web projects",
  "author": "Studio Arabadzhiev",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "*://*.flickr.com/*",
    "*://*.staticflickr.com/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Flickr URL Extractor",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.flickr.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
